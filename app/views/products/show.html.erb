<% title "Product" %>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>
<p>
  <strong>Price:</strong>
  <!--<%= @product.price %>-->
  <%= print_price(@product.price) %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Stock:</strong>
  <%= print_stock(@product.stock) %>
</p>
<p>
<p>
  <strong>Image Url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>
